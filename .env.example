# .env.example
# Copie este arquivo para .env e preencha com seus dados

# Configuração SMTP (OBRIGATÓRIO)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-de-app

# Destinatários (podem ser múltiplos separados por vírgula)
MAIL_TO=destinatario1@exemplo.com,destinatario2@exemplo.com
MAIL_CC=copia@exemplo.com
MAIL_BCC=copia-oculta@exemplo.com

# Remetente (opcional, usa SMTP_USER se não definido)
MAIL_FROM=seu-email@gmail.com

# IA (OPCIONAL - para resumos automáticos)
GEMINI_API_KEY=sua-chave-gemini-aqui
# ou
HF_TOKEN=seu-token-huggingface-aqui

# Overrides para testes
PERIOD_OVERRIDE=today
DAYS_WINDOW_OVERRIDE=1
FORCE_TEST_EMAIL=false

# Logging
LOG_LEVEL=INFO
